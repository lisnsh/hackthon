<div class="container">
    <div>
      <div><span>张海涛 **.zhang@careerbuilder.com</span></div>
      <div><span>Posted on 2015-12-12</span></div>
    </div>
    <div class="job_basic">
        <div class="title"><h5><%=@job.job_title%></h5></div>
        <div class="row">
            <div class="col-xs-6">Company: <%=@job.company_name%></div><div class="col-xs-6">Experience：<%=@job.required_experience%></div>
        </div>
        <div class="row">
            <div class="col-xs-6">Salary：<%=@job.salary%>K</div><div class="col-xs-6">Salary：<%=@job.job_type%>K</div>
        </div>
        <div>Address: <%=@job.address%></div>
    </div>
    <div class="job_description_requirement">
      <div class="description">
      <div><h5>Job Description:</h5></div>
      <div><%=@job.job_description.gsub("/n","<br/>")%></div>
      </div>
      <div class="requirement">
      <div><h5>Requirements:</h5></div>
      <div><%=@job.job_requirement.gsub("/n","<br/>")%></div>
      </div>
    </div>


    <button type="button" class="btn btn-default btn-block">Apply & Share</button>


    <div class="play_content">

      <div class="play_user_infor">
        <input type="text" class="form-control" placeholder="姓名">
        <input type="password" class="form-control" placeholder="手机号">
      
        <div>
          <button type="button" class="btn btn-default">Apply</button>
          <button type="button" class="btn btn-default">Share</button>
        </div>

        <%= render partial: 'share_job'  %>
      </div>

      <div class="play_resume">
        <div class="resume_basic">
          <div><h5>Basic Information</h5></div>
          <div class="row">
            <div class="col-xs-6">Name: Lian Shenghua</div><div class="col-xs-6">Work Experience: 3年</div>
            <div class="col-xs-6">City: Shanghai</div><div class="col-xs-6">Email: lian.winfa@gmail.com</div>
            <div class="col-xs-6">Phone: 18616769617</div><div class="col-xs-6"></div>
          </div>
        </div>

        <div class="resume_work_experience">
          <div><h5>Work Experience</h5></div>
          <div>
            <input type="text" class="form-control" placeholder="Job Title" />  
          </div>
          <div>
            <input type="text" class="form-control" placeholder="Company Name" />
          </div>
          <div class="input-daterange input-group form-group" id="datepicker">
              <input type="text" class="form-control start_date" placeholder="Start" />
              <span class="input-group-addon">to</span>
              <input type="text" class="form-control end_date" placeholder="End" />
          </div>
          <div>
            <textarea class="form-control" rows="5" placeholder="Desciption of your job"></textarea>
          </div>
        </div>

        <div class="resume_education">
          <div><h5>Education</h5></div>
          <div>
            <input type="text" class="form-control" placeholder="Degree" />  
          </div>
          <div>
            <input type="text" class="form-control" placeholder="School Name" />
          </div>
          <div class="input-daterange input-group form-group" id="datepicker">
              <input type="text" class="form-control start_date" placeholder="Start" />
              <span class="input-group-addon">to</span>
              <input type="text" class="form-control end_date" placeholder="End" />
          </div>
          <div>
            <textarea class="form-control" rows="5" placeholder="Desciption in School"></textarea>
          </div>
        </div>

        <div class="resume_button">
          <button type="button" class="btn btn-default">Cancel Edit</button>
          <button type="button" class="btn btn-default">Save Resume</button>
        </div>

      </div>

    </div>

    <script type='text/javascript'>
      $('.input-daterange').datepicker({
       format: "yyyy-mm",
        minViewMode: 1,
      });
    </script>

